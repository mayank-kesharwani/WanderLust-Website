<% layout("./layouts/boilerplate")-%>
<script>
  const mapToken = "<%=process.env.MAP_TOKEN%>"
  const listings =  <%-JSON.stringify(listing)%>
</script>
<div class="container mt-4">
  <div class="row">
    <div class="col-12 col-md-10 offset-md-1">
      <h3 class="mb-4 text-center text-md-start"><%= listing.title%></h3>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="card col-12 col-md-10 col-lg-8 show-card listing-card">
      <img
        src="<%=listing.image.url%>"
        class="card-img-top show-img"
        alt="listing_image"
      />
      <div class="card-body mt-2">
        <p class="card-text"><b>Owned By:</b> <%= listing.owner.username%></p>
        <p class="card-text"><%= listing.description%></p>
        <p class="card-text">
          &#8377; <%= listing.price.toLocaleString("en-IN")%>
        </p>
        <p class="card-text"><%= listing.location%></p>
        <p class="card-text"><%= listing.country%></p>
        <p class="card-text"><b>Category:</b> <%= listing.category%></p>
      </div>
    </div>
  </div>

  <%if(currentUser && currentUser._id.equals(listing.owner._id)){%>
  <div class="row justify-content-center mt-3">
    <div class="col-12 col-md-10 col-lg-8 d-flex gap-2 justify-content-end">
      <a
        href="/listings/<%=listing._id%>/edit"
        class="btn btn-dark col-1 offset-3 add-btn"
        >Edit
      </a>
      <form action="/listings/<%=listing._id%>?_method=DELETE" method="post">
        <button class="btn btn-dark offset-4">Delete</button>
      </form>
    </div>
  </div>
  <%}%>
  <div class="row justify-content-center mt-4">
    <div class="col-12 col-md-10 col-lg-8 offset-3 mt-4 mb-3">
      <%if(currentUser){%>
      <hr />
      <h4>Leave a Review</h4>
      <form
        action="/listings/<%=listing._id%>/reviews"
        method="post"
        novalidate
        class="needs-validation"
      >
        <div class="mb-3 mt-3">
          <label for="rating" class="form-label">Rating</label>
          <fieldset class="starability-slot">
            <input
              type="radio"
              id="no-rate"
              class="input-no-rate"
              name="review[rating]"
              value="1"
              checked
              aria-label="No rating."
            />
            <input
              type="radio"
              id="first-rate1"
              name="review[rating]"
              value="1"
            />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input
              type="radio"
              id="first-rate2"
              name="review[rating]"
              value="2"
            />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input
              type="radio"
              id="first-rate3"
              name="review[rating]"
              value="3"
            />
            <label for="first-rate3" title="Average">3 stars</label>
            <input
              type="radio"
              id="first-rate4"
              name="review[rating]"
              value="4"
            />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input
              type="radio"
              id="first-rate5"
              name="review[rating]"
              value="5"
            />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>
        <div class="mb-3 mt-3">
          <label for="comment" class="form-label">Comments</label>
          <textarea
            id="comment"
            class="form-control"
            rows="4"
            cols="10"
            name="review[comment]"
            required
          ></textarea>
          <div class="invalid-feedback">Please add comment</div>
          <button class="btn btn-outline-dark mt-3">Submit</button>
        </div>
      </form>
      <%}%>
    </div>
  </div>
  <hr />
  <%if(listing.reviews.length>0){%>
  <div class="row justify-content-center mt-4">
    <div class="col-12 col-md-10 col-lg-8">
      <h5>All Reviews</h5>
      <div class="row">
        <%for(review of listing.reviews){%>
        <div class="col-12 col-md-6 mb-3">
          <div class="card h-100"></div>
          <div class="card-body">
            <h5 class="card-title mt-3">@<%=review.author.username%></h5>
            <p
              class="starability-result card-text"
              data-rating="<%=review.rating%>"
            ></p>
            <p class="card-text"><%=review.comment%></p>
            <form
              action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE"
              method="post"
              class="mb-3"
            >
              <button class="btn btn-sm btn-dark">Delete</button>
            </form>
          </div>
        </div>
        <%}%>
      </div>
      <%}%>
    </div>
    <div class="row justify-content-center mt-4 mb-4">
      <div class="col-12 col-md-10 col-lg-8">
        <h4>Where youâ€™ll be</h4>
        <div id="map" class="w-100" style="height: 300px"></div>
      </div>
    </div>
  </div>
</div>

<script src="/js/map.js"></script>
