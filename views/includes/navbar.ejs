<style>
  /* Search input */
  .input-search {
    border-radius: 2rem;
    min-width: 160px;
    padding: 0.5rem 3rem 0.5rem 2rem;
  }

  /* Navbar base */
  .navbar {
    z-index: 1050;
  }

  /* Mobile + iPad collapsed menu ONLY */
  @media (max-width: 991px) {
    .navbar-collapse {
      background-color: #f8f9fa;
      padding: 1rem;
      width: 100%;
      max-height: calc(100vh - 56px); /* navbar height */
      overflow-y: auto;
    }

    .navbar-nav {
      align-items: flex-start;
    }

    .navbar-nav .nav-item {
      width: 100%;
    }

    .navbar-nav .nav-link {
      width: 100%;
      padding: 0.6rem 0;
    }

    /* Search full width
    .input-search {
      width: 100%;
      margin-bottom: 0.5rem;
    }

    .btn-search {
      width: 100%;
    } */
  }

  /* Search button */
  .btn-search {
    color: #fe424d;
    border: 1px solid #fe424d !important;
    border-radius: 2rem;
    padding: 0 1rem;
  }

  .btn-search:hover,
  .btn-search:active {
    background-color: #fe424d;
  }
</style>
<nav class="navbar navbar-expand-lg bg-light border-bottom sticky-top">
  <div class="container-fluid">
    <!-- Brand -->
    <a class="navbar-brand d-flex align-items-center gap-2" href="/listings">
      <i class="fa-regular fa-compass"></i>
      <span class="fw-semibold">Wanderlust</span>
    </a>

    <!-- Toggler -->
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNav"
      aria-controls="navbarNav"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Collapsible Content -->
    <div class="collapse navbar-collapse" id="navbarNav">
      <!-- Search -->
      <form
        class="d-flex my-2 my-md-0 mx-md-3"
        role="search"
        action="/listings"
        method="get"
      >
        <input
          class="form-control me-2 input-search"
          type="search"
          placeholder="Search destinations"
          aria-label="Search"
          name="search"
        />
        <button class="btn btn-outline-success btn-search" type="submit">
          Search
        </button>
      </form>

      <!-- Left links -->
      <ul class="navbar-nav me-auto mb-2 mb-md-0 ms-md-3">
        <li class="nav-item">
          <a class="nav-link" href="/listings/new">Wanderlust your home</a>
        </li>
      </ul>
      <!-- Auth links -->
      <ul class="navbar-nav ms-md-3">
        <% if (!currentUser) { %>
        <li class="nav-item">
          <a class="nav-link fw-bold" href="/signup">Sign Up</a>
        </li>
        <li class="nav-item">
          <a class="nav-link fw-bold" href="/login">Log In</a>
        </li>
        <% } %> <% if (currentUser) { %>
        <li class="nav-item">
          <a class="nav-link" href="/account">My Account</a>
        </li>

        <li class="nav-item">
          <a class="nav-link fw-bold" href="/logout">Logout</a>
        </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>
